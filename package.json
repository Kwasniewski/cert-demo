{
  "name": "azure-cert-demo",
  "version": "1.0.0",
  "description": "Tool to download certificates from Azure Key Vault",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "clean": "rm -rf dist",
    "setup": "./setup.sh",
    "example:download-with-private-key": "ts-node examples/download-with-private-key.ts",
    "example:auth-methods": "ts-node examples/authentication-methods.ts",
    "example:cert-creation": "ts-node examples/certificate-creation.ts",
    "test:connection": "npm run dev -- test",
    "list:certs": "npm run dev -- list"
  },
  "keywords": [
    "azure",
    "keyvault",
    "certificate",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@azure/identity": "^4.0.1",
    "@azure/keyvault-certificates": "^4.7.0",
    "@azure/keyvault-keys": "^4.7.0",
    "@azure/keyvault-secrets": "^4.7.0",
    "commander": "^11.1.0",
    "node-forge": "^1.3.1",
    "pem": "^1.14.8"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/node-forge": "^1.3.11",
    "@types/pem": "^1.14.4",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  }
}
